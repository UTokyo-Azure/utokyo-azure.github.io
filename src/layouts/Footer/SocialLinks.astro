---
import { Image } from "astro:assets";
import type { Lang } from "@components/types";
import XLogo from "./x_logo.png";
import YouTubeLogo from "./youtube_logo.png";

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;

const socialLinks = {
  ja: {
    X: {
      title: "X",
      url: "https://x.com/utelecon_pr",
    },
    YouTube: {
      title: "YouTube",
      url: "https://www.youtube.com/@utelecon",
    },
    policy: {
      title: "ソーシャルメディアポリシー",
      url: "/docs/sns-policy",
    },
  },
  en: {
    X: {
      title: "X",
      url: "https://x.com/utelecon_pr_en",
    },
    YouTube: {
      title: "YouTube",
      url: "https://www.youtube.com/@utelecon",
    },
    policy: {
      title: "Social Media Policy (Japanese)",
      url: "/docs/sns-policy",
    },
  },
}[lang];
---

<div class="social-links">
  <ul>
    <li class="social-link">
      <a href={socialLinks.X.url} title={socialLinks.X.title}>
        <Image class="social-logo" src={XLogo} alt="X" />
      </a>
    </li>
    <li class="social-link">
      <a href={socialLinks.YouTube.url} title={socialLinks.YouTube.title}>
        <Image class="social-logo" src={YouTubeLogo} alt="YouTube" />
      </a>
    </li>
    <li>
      <a href={socialLinks.policy.url}>{socialLinks.policy.title}</a>
    </li>
  </ul>
</div>

<style lang="scss">
  @import "../../styles/color.scss";

  div.social-links {
    background: $white-gray-light;
    border-bottom: 5px solid $heading-color;

    padding: 0.5rem 4rem 0.5rem;
    @media (max-width: 768px) {
      padding: 0.5rem 2rem 0.5rem;
    }
    @media (max-width: 512px) {
      padding: 0.5rem 1rem 0.5rem;
    }

    ul {
      list-style: none;
      padding: 0;
      margin: 0;
      display: flex;
      gap: 1rem;

      li {
        display: flex;
        margin: 0;
        padding: 0;
        justify-content: center;
        align-items: center;
        & > a {
          display: flex;
          justify-content: center;
          align-items: center;
        }
      }

      li.social-link {
        width: 2.25rem;
        height: 2.25rem;
        background: white;
        &:hover {
          text-decoration: none;
        }
        & > a {
          padding: 0.4rem;
          width: 100%;
          height: 100%;
          & > img {
            width: 100%;
            height: auto;
          }
        }
      }

      li:last-child {
        & > a {
          text-decoration: none;
          color: $footer-background-color;
          &:hover {
            text-decoration: underline;
          }
        }
        &::before {
          font-family: "Material Icons";
          content: "arrow_forward";
          margin-right: 0.5rem;
        }
      }
    }
  }
</style>
